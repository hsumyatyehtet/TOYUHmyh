<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:src="@drawable/menu_cart" />

        <ImageView
            android:id="@+id/ivToyu"
            android:layout_width="@dimen/margin_90"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_toEndOf="@+id/ivMenu"
            android:src="@drawable/toyu_grey" />

        <ImageView
            android:id="@+id/ivNoti"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginEnd="@dimen/margin_medium_2"
            android:src="@drawable/noti_cart" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_200"
            android:src="@drawable/coming_soon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relax Hooman!!"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/mainColor2"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/mainColor3"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
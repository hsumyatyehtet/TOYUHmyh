<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_medium_2"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivToyItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_150"
            android:layout_centerHorizontal="true"
            android:src="@drawable/toy_mini_bot"/>

        <TextView
            android:id="@+id/tvToyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivToyItem"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:text="NEW"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tvToyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rlNext"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:text="Mini Bot"
            android:textColor="@color/mainColor2"
            android:textSize="@dimen/text_regular" />

        <RelativeLayout
            android:id="@+id/rlNext"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_below="@+id/ivToyItem"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/bg_item_to_detail"
            android:layout_marginBottom="@dimen/margin_medium_2">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_right" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>